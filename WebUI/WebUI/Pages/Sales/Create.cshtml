@page
@model WebUI.Pages.Sales.CreateModel

@{
    ViewData["Title"] = "Nueva venta";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-page="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    <form method="get" class="card shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-md-5">
                    <label class="form-label">Buscar cliente</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input asp-for="ClientSearch" class="form-control" placeholder="Nombre o CI/NIT" />
                    </div>
                </div>
                <div class="col-md-5">
                    <label class="form-label">Buscar disciplina</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-filter"></i></span>
                        <input asp-for="DisciplineSearch" class="form-control" placeholder="Nombre" />
                    </div>
                </div>
                <div class="col-md-2 d-grid">
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-secondary">
                            <i class="fas fa-search"></i>
                        </button>
                        <a href='@Url.Page("Create")' class="btn btn-outline-warning" title="Limpiar filtros">
                            <i class="fas fa-eraser"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-2">
                <div class="text-muted small">Si no encuentras resultados, crea el registro y vuelve a esta pantalla.</div>
                <div class="d-flex gap-2">
                    <a asp-page="/Clients/Create" class="btn btn-outline-primary btn-sm" target="_blank"><i class="fas fa-user-plus"></i> Nuevo cliente</a>
                    <a asp-page="/Disciplines/Create" class="btn btn-outline-primary btn-sm" target="_blank"><i class="fas fa-id-card-alt"></i> Nueva disciplina</a>
                </div>
            </div>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-cash-register"></i> Datos de la venta
        </div>
        <div class="card-body">
            <form method="post" class="row g-3" id="saleForm">
                <input type="hidden" asp-for="CorrelationId" />
                <input type="hidden" asp-for="OperationId" />

                <div class="col-md-6">
                    <label asp-for="Input.ClientId" class="form-label">Cliente</label>
                    <select asp-for="Input.ClientId" class="form-select" id="clientSelect">
                        <option value="">-- Selecciona un cliente --</option>
                        @foreach (var c in Model.Clients)
                        {
                            var fullName = $"{c.Name} {c.FirstLastname} {c.SecondLastname}".Trim();
                        <option value="@c.Id" data-name="@fullName" data-ci="@c.Ci">@fullName (@c.Ci)</option>
                        }
                    </select>
                    <span asp-validation-for="Input.ClientId" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Detalles de venta (disciplinas)</label>
                    <div id="detailsContainer"></div>
                    <div class="mt-2">
                        <button type="button" id="addDetailBtn" class="btn btn-outline-secondary btn-sm"><i class="fas fa-plus"></i> AÃ±adir disciplina</button>
                    </div>
                </div>

                <div class="col-md-3">
                    <label asp-for="Input.SaleDate" class="form-label">Fecha de venta</label>
                    <input asp-for="Input.SaleDate" class="form-control" type="date" />
                    <span asp-validation-for="Input.SaleDate" class="text-danger"></span>
                </div>


                <div class="col-md-3">
                    <label asp-for="Input.TotalAmount" class="form-label">Total (Bs)</label>
                    <input asp-for="Input.TotalAmount" class="form-control" type="number" step="0.01" min="0" id="totalAmount" readonly />
                    <span asp-validation-for="Input.TotalAmount" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Input.TaxId" class="form-label">CI/NIT</label>
                    <input asp-for="Input.TaxId" class="form-control" />
                    <span asp-validation-for="Input.TaxId" class="text-danger"></span>
                </div>




                <div class="col-md-6">
                    <div class="bg-light border rounded p-3 h-100">
                        <h5 class="fw-semibold">Resumen</h5>
                        <div class="small text-muted">Se actualiza al elegir cliente y disciplinas.</div>
                        <dl class="row mt-2 mb-0">
                            <dt class="col-4">Cliente</dt>
                            <dd class="col-8" id="clientPreview">Selecciona un cliente</dd>
                            <dt class="col-4">CI/NIT</dt>
                            <dd class="col-8" id="clientDoc">-</dd>
                            <dt class="col-4">Disciplinas</dt>
                            <dd class="col-8" id="disciplinePreview">Selecciona una disciplina</dd>
                            <dt class="col-4">Sesiones/mes</dt>
                            <dd class="col-8" id="sessionPreview">-</dd>
                            <dt class="col-4">Total</dt>
                            <dd class="col-8 fw-bold" id="totalPreview">0</dd>
                        </dl>
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Registrar venta
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>

        const clientSelect = document.getElementById('clientSelect');
        const totalInput = document.getElementById('totalAmount');
        const clientPreview = document.getElementById('clientPreview');
        const clientDoc = document.getElementById('clientDoc');
        const disciplinePreview = document.getElementById('disciplinePreview');
        const sessionPreview = document.getElementById('sessionPreview');
        const totalPreview = document.getElementById('totalPreview');
        const detailsContainer = document.getElementById('detailsContainer');
        const addDetailBtn = document.getElementById('addDetailBtn');

        function updateMembershipInfo() {
            // no-op: membership select removed
        }

        function updateClientInfo() {
            const option = clientSelect.options[clientSelect.selectedIndex];
            const name = option?.getAttribute('data-name') || 'Selecciona un cliente';
            const ci = option?.getAttribute('data-ci') || '-';
            clientPreview.textContent = name;
            clientDoc.textContent = ci;
        }

        function createDetailRow(idx, detail) {
            const wrapper = document.createElement('div');
            wrapper.className = 'row g-2 align-items-end mb-2 detail-row';
            wrapper.dataset.index = idx;

            const selectColumn = document.createElement('div');
            selectColumn.className = 'col-md-5';
            const labelSel = document.createElement('label');
            labelSel.className = 'form-label';
            labelSel.textContent = 'Disciplina';
            const sel = document.createElement('select');
            sel.className = 'form-select detail-discipline';
            sel.name = `Input.Details[${idx}].DisciplineId`;
            const defaultOpt = document.createElement('option');
            defaultOpt.value = '';
            defaultOpt.textContent = '-- Selecciona --';
            sel.appendChild(defaultOpt);
            @* Populate options *@
            @foreach (var d in Model.Disciplines)
            {
                <text>var opt = document.createElement('option'); opt.value = '@d.Id'; opt.setAttribute('data-price','@d.Price'); opt.textContent = '@d.Name (@(d.Price?.ToString("N2") ?? "-") Bs)'; sel.appendChild(opt);</text>
            }
            selectColumn.appendChild(labelSel);
            selectColumn.appendChild(sel);

            const qtyCol = document.createElement('div');
            qtyCol.className = 'col-md-2';
            const qtyLabel = document.createElement('label'); qtyLabel.className='form-label'; qtyLabel.textContent='Cantidad';
            const qtyInput = document.createElement('input'); qtyInput.type='number'; qtyInput.className='form-control detail-qty'; qtyInput.name=`Input.Details[${idx}].Qty`; qtyInput.min='1'; qtyInput.value = detail?.Qty || 1;
            qtyCol.appendChild(qtyLabel); qtyCol.appendChild(qtyInput);

            const priceCol = document.createElement('div'); priceCol.className='col-md-2'; const priceLabel = document.createElement('label'); priceLabel.className='form-label'; priceLabel.textContent='Precio'; const priceInput = document.createElement('input'); priceInput.type='number'; priceInput.className='form-control detail-price'; priceInput.name=`Input.Details[${idx}].Price`; priceInput.readOnly=true; priceInput.step='0.01'; priceInput.value = detail?.Price || '';
            priceCol.appendChild(priceLabel); priceCol.appendChild(priceInput);

            const totalCol = document.createElement('div'); totalCol.className='col-md-2'; const totalLabel = document.createElement('label'); totalLabel.className='form-label'; totalLabel.textContent='Total'; const totalInputRow = document.createElement('input'); totalInputRow.type='number'; totalInputRow.className='form-control detail-total'; totalInputRow.name=`Input.Details[${idx}].Total`; totalInputRow.readOnly=true; totalInputRow.step='0.01'; totalInputRow.value = detail?.Total || '';
            totalCol.appendChild(totalLabel); totalCol.appendChild(totalInputRow);

            const removeCol = document.createElement('div'); removeCol.className='col-md-1'; const remBtn = document.createElement('button'); remBtn.type='button'; remBtn.className='btn btn-outline-danger btn-sm'; remBtn.innerHTML = '<i class="fas fa-trash"></i>';
            removeCol.appendChild(remBtn);

            wrapper.appendChild(selectColumn);
            wrapper.appendChild(qtyCol);
            wrapper.appendChild(priceCol);
            wrapper.appendChild(totalCol);
            wrapper.appendChild(removeCol);

            detailsContainer.appendChild(wrapper);

            function recomputeRow() {
                const priceVal = parseFloat(priceInput.value || 0);
                const qtyVal = parseInt(qtyInput.value || 1);
                const totalVal = (priceVal * qtyVal) || 0;
                totalInputRow.value = totalVal.toFixed(2);
                recomputeTotal();
            }

            sel.addEventListener('change', function() {
                const selOpt = sel.options[sel.selectedIndex];
                const p = selOpt?.getAttribute('data-price');
                if (p) priceInput.value = parseFloat(p).toFixed(2);
                recomputeRow();
            });
            qtyInput.addEventListener('change', recomputeRow);
            remBtn.addEventListener('click', function() { wrapper.remove(); recomputeTotal(); });
        }

        function addDetail(detail) {
            const idx = detailsContainer.querySelectorAll('.detail-row').length;
            createDetailRow(idx, detail);
        }

        function recomputeTotal() {
            const totals = Array.from(document.querySelectorAll('.detail-total')).map(i => parseFloat(i.value || 0));
            const sum = totals.reduce((a,b)=>a+b,0);
            totalInput.value = sum.toFixed(2);
            totalPreview.textContent = `${sum.toFixed(2)} Bs`;
            // update discipline preview
            const names = Array.from(document.querySelectorAll('.detail-row select.detail-discipline')).map(s => s.options[s.selectedIndex]?.text || '').filter(t => t && t.trim() !== '');
            disciplinePreview.textContent = names.length ? names.join(', ') : 'Selecciona una disciplina';
        }

        addDetailBtn?.addEventListener('click', () => addDetail(null));

        // membership select removed
        clientSelect?.addEventListener('change', updateClientInfo);
        // updateMembershipInfo();
        updateClientInfo();

        // Initialize with one detail row
        addDetail();
    </script>
}