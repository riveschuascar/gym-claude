@page
@model WebUI.Pages.Sales.IndexModel

@{
    ViewData["Title"] = "Ventas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <div class="d-flex gap-2">
            <form method="get" class="d-flex">
                <input type="text" name="Search" value="@Model.Search" class="form-control me-2" placeholder="Buscar por cliente, CI/NIT o disciplina" />
                <button type="submit" class="btn btn-outline-secondary me-2"><i class="fas fa-search"></i></button>
                <a href='@Url.Page("Index")' class="btn btn-outline-warning" title="Limpiar filtros">
                    <i class="fas fa-eraser"></i>
                </a>
            </form>
            <a asp-page="Create" class="btn btn-primary">
                <i class="fas fa-cash-register"></i> Nueva venta
            </a>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.0/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.0/sweetalert2.min.css" />
    <script>
        function confirmDelete(event, saleName) {
            event.preventDefault();
            const form = event.target;

            Swal.fire({
                title: '¿Estás seguro?',
                text: `Esta acción eliminará la venta de "${saleName}".`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>

        <!-- Script de Descarga Automática -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var autoDownload = '@Model.AutoDownload'.toLowerCase() === 'true'; 
            var saleId = parseInt('@Model.SaleId');

            if (autoDownload && saleId > 0) {
                console.log("Iniciando descarga automática para venta ID: " + saleId);
                
                window.location.href = '?handler=Download&saleId=' + saleId;
            }
        });
    </script>
}
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <i class="fas fa-list"></i> Historial de ventas
        </div>
        <div class="card-body">
            @if (!Model.Sales.Any())
            {
                <div class="text-muted">Aún no hay ventas registradas.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Disciplinas</th>
                                <th>Cliente</th>
                                <th>Fecha venta</th>
                                <th>CI/NIT</th>
                                <th class="text-end">Total (Bs)</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model.Sales)
                            {
                                <tr>
                                    <td>@s.Disciplines</td>
                                    <td>@s.ClientName</td>
                                    <td>@s.SaleDate.ToString("dd/MM/yyyy")</td>
                                    <td>@(string.IsNullOrWhiteSpace(s.Nit) ? "-" : s.Nit)</td>
                                    <td class="text-end">@s.Total.ToString("N2")</td>
                                    <td class="text-end">
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@s.Id" class="d-inline" onsubmit="return confirmDelete(event, '@s.Disciplines');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>