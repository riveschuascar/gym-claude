@page
@model WebUI.Pages.Memberships.EditModel
@{
    ViewData["Title"] = "Editar Membresía";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Membership.Id" />

        <div class="mb-3">
            <label asp-for="Membership.Name" class="form-label">Nombre</label>
            <input asp-for="Membership.Name" class="form-control" placeholder="Ingrese el nombre de la membresía" />
        </div>

        <div class="mb-3">
            <label asp-for="Membership.Price" class="form-label">Precio (Bs)</label>
            <input asp-for="Membership.Price" class="form-control" type="number" step="0.01" placeholder="Ingrese el precio en Bs" />
        </div>

        <div class="mb-3">
            <label asp-for="Membership.Description" class="form-label">Descripción</label>
            <input asp-for="Membership.Description" class="form-control" placeholder="Ingrese la descripción de la membresía" />
        </div>

        <div class="mb-3">
            <label asp-for="Membership.MonthlySessions" class="form-label">Sesiones Mensuales</label>
            <input asp-for="Membership.MonthlySessions" class="form-control" type="number" placeholder="Ingrese la cantidad de sesiones mensuales" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Membership.IsActive" class="form-check-input" />
            <label asp-for="Membership.IsActive" class="form-check-label">Activo</label>
        </div>

        <!-- Sección de disciplinas -->
        <div class="mb-3">
            <label class="form-label">Disciplinas Disponibles</label>
            <div class="form-check">
                @foreach (var discipline in Model.Disciplines)
                {
                <input class="form-check-input"
                       type="checkbox"
                       name="SelectedDisciplineIds"
                       value="@discipline.Id"
                       id="discipline_@discipline.Id"
                       @(Model.SelectedDisciplineIds.Contains(discipline.Id) ? "checked" : "") />
                <label class="form-check-label" for="discipline_@discipline.Id">@discipline.Name</label>
                <br />
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}