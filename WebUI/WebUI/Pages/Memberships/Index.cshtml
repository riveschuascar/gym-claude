@page
@model WebUI.Pages.Memberships.IndexModel

@{
    ViewData["Title"] = "Membresías";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    <a asp-page="Create" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Nueva Membresía
    </a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio (Bs)</th>
                <th>Descripción</th>
                <th>Sesiones Mensuales</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Memberships)
            {
            <tr>
                <td>@m.Name</td>
                <td>
                    @if (m.Price.HasValue)
                        {
                    @($"{m.Price.Value:N2} Bs")
                        }
                        else
                        {
                    @("-")
                        }
                </td>
                <td>@m.Description</td>
                <td>@m.MonthlySessions</td>
                <td>@(m.IsActive ? "Sí" : "No")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@m.Id" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-page="Delete" asp-route-id="@m.Id" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>