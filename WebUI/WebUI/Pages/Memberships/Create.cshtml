@page
@model WebUI.Pages.Memberships.CreateModel
@{
    ViewData["Title"] = "Crear Membresía";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form method="post">
        <div class="mb-3">
            <label asp-for="Membership.Name" class="form-label">Nombre</label>
            <input asp-for="Membership.Name" class="form-control" placeholder="Membresía Gold" />
        </div>

        <div class="mb-3">
            <label asp-for="Membership.Price" class="form-label">Precio</label>
            <input asp-for="Membership.Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
        </div>

        <div class="mb-3">
            <label asp-for="Membership.Description" class="form-label">Descripción</label>
            <input asp-for="Membership.Description" class="form-control" placeholder="Descripción de la membresía" />
        </div>

        <div class="mb-3">
            <label asp-for="Membership.MonthlySessions" class="form-label">Sesiones Mensuales</label>
            <input asp-for="Membership.MonthlySessions" type="number" class="form-control" placeholder="0" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Membership.IsActive" class="form-check-input" />
            <label asp-for="Membership.IsActive" class="form-check-label">Activo</label>
        </div>

        <div class="mb-3">
            <label class="form-label">Disciplinas Disponibles</label>
            <div class="form-check">
                @foreach (var discipline in Model.Disciplines)
                {
                <input class="form-check-input"
                       type="checkbox"
                       name="SelectedDisciplineIds"
                       value="@discipline.Id"
                       id="discipline_@discipline.Id" />
                <label class="form-check-label" for="discipline_@discipline.Id">@discipline.Name</label>
                <br />
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Crear Membresía
        </button>
        <a asp-page="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancelar
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
