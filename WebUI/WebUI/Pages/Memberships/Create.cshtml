@page
@model WebUI.Pages.Memberships.CreateModel

@{
    ViewData["Title"] = "Crear Membresía";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    <form method="post">
        <div class="mb-3">
            <label asp-for="Membership.Name" class="form-label">Nombre</label>
            <input asp-for="Membership.Name" class="form-control" placeholder="Membresía Gold" />
            <span asp-validation-for="Membership.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Membership.Price" class="form-label">Precio</label>
            <input asp-for="Membership.Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
            <span asp-validation-for="Membership.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Membership.Description" class="form-label">Descripción</label>
            <input asp-for="Membership.Description" class="form-control" placeholder="Descripción de la membresía" />
            <span asp-validation-for="Membership.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Membership.MonthlySessions" class="form-label">Sesiones Mensuales</label>
            <input asp-for="Membership.MonthlySessions" type="number" class="form-control" placeholder="0" />
            <span asp-validation-for="Membership.MonthlySessions" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Membership.IsActive" class="form-check-input" />
            <label asp-for="Membership.IsActive" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Crear Membresía
        </button>
        <a asp-page="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancelar
        </a>
    </form>
</div>
