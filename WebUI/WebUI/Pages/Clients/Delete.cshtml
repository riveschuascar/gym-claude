@page "{id:int}"
@model WebUI.Pages.Clients.DeleteModel
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header text-center">
                <h2>Eliminar Cliente</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">¿Está seguro que desea eliminar al cliente <strong>@Model.Client.Name @Model.Client.FirstLastname</strong>?</div>
                <form method="post">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>
