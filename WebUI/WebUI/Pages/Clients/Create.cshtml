@page
@model WebUI.Pages.Clients.CreateModel
@{
    ViewData["Title"] = "Registrar Nuevo Cliente";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header text-center">
                <h2>Registrar Nuevo Cliente</h2>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <form method="post">
                    <h5 class="mt-2 mb-3">Información Personal</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Client.Name" class="form-label fw-bold">Nombres</label>
                            <input asp-for="Client.Name" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Client.FirstLastname" class="form-label fw-bold">Primer Apellido</label>
                            <input asp-for="Client.FirstLastname" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Client.SecondLastname" class="form-label fw-bold">Segundo Apellido</label>
                            <input asp-for="Client.SecondLastname" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.Ci" class="form-label fw-bold">CI</label>
                            <input asp-for="Client.Ci" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.DateBirth" class="form-label fw-bold">Fecha de Nacimiento</label>
                            <input asp-for="Client.DateBirth" class="form-control" type="date" />
                        </div>
                    </div>
                    <hr />
                    <h5 class="mt-2 mb-3">Información de Cliente</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.FitnessLevel" class="form-label fw-bold">Nivel de Condición Física</label>
                            <select asp-for="Client.FitnessLevel" class="form-select">
                                <option value="">-- Seleccione un nivel --</option>
                                <option value="Principiante">Principiante</option>
                                <option value="Intermedio">Intermedio</option>
                                <option value="Avanzado">Avanzado</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.EmergencyContactPhone" class="form-label fw-bold">Teléfono de Emergencia</label>
                            <input asp-for="Client.EmergencyContactPhone" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.InitialWeightKg" class="form-label fw-bold">Peso Inicial (Kg)</label>
                            <input asp-for="Client.InitialWeightKg" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.CurrentWeightKg" class="form-label fw-bold">Peso Actual (Kg)</label>
                            <input asp-for="Client.CurrentWeightKg" class="form-control" type="number" step="0.01" />
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <button type="submit" class="btn btn-primary">Registrar Cliente</button>
                        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
