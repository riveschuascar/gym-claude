@page "{id}"
@model WebUI.Pages.Users.EditModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>@ViewData["Title"]</h1>
            <hr />

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form method="post">
                <input type="hidden" asp-for="User.Id" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="User.Name" class="form-label">Nombre</label>
                        <input asp-for="User.Name" class="form-control" />
                        <span asp-validation-for="User.Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="User.Ci" class="form-label">Cédula de Identidad</label>
                        <input asp-for="User.Ci" class="form-control" />
                        <span asp-validation-for="User.Ci" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="User.FirstLastname" class="form-label">Primer Apellido</label>
                        <input asp-for="User.FirstLastname" class="form-control" />
                        <span asp-validation-for="User.FirstLastname" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="User.SecondLastname" class="form-label">Segundo Apellido</label>
                        <input asp-for="User.SecondLastname" class="form-control" />
                        <span asp-validation-for="User.SecondLastname" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="User.DateOfBirth" class="form-label">Fecha de Nacimiento</label>
                        <input asp-for="User.DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="User.DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="User.UserRole" class="form-label">Rol</label>
                        <select asp-for="User.UserRole" class="form-select">
                            <option value="">-- Seleccione un rol --</option>
                            <option value="Admin">Admin</option>
                            <option value="Entrenador">Entrenador</option>
                        </select>
                        <span asp-validation-for="User.UserRole" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="User.HireDate" class="form-label">Fecha de Contratación</label>
                        <input asp-for="User.HireDate" type="date" class="form-control" />
                        <span asp-validation-for="User.HireDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="User.MonthlySalary" class="form-label">Salario Mensual</label>
                        <input asp-for="User.MonthlySalary" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="User.MonthlySalary" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="User.Specialization" class="form-label">Especialización</label>
                        <input asp-for="User.Specialization" class="form-control" />
                        <span asp-validation-for="User.Specialization" class="text-danger"></span>
                    </div>
                </div>

                <hr />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
