@page
@model WebUI.Pages.Disciplines.CreateModel
@{
    ViewData["Title"] = "Registrar Nueva Disciplina";
}

<div class="text-center">
    <h1 class="display-4">Registrar Nueva Disciplina</h1>
    <p class="lead text-muted">Complete los datos para crear una nueva disciplina.</p>
</div>

@if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger mt-3">@err</div>
}

<form method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="Discipline.Name" class="form-label">Nombre</label>
        <input asp-for="Discipline.Name" class="form-control" />
        <span asp-validation-for="Discipline.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discipline.StartTime" class="form-label">Hora de Inicio</label>
        <input asp-for="Discipline.StartTime" type="time" class="form-control" />
        <span asp-validation-for="Discipline.StartTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discipline.EndTime" class="form-label">Hora de Fin</label>
        <input asp-for="Discipline.EndTime" type="time" class="form-control" />
        <span asp-validation-for="Discipline.EndTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discipline.Price" class="form-label">Precio</label>
        <input asp-for="Discipline.Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Discipline.Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discipline.MonthlySessions" class="form-label">Sesiones Mensuales</label>
        <input asp-for="Discipline.MonthlySessions" type="number" class="form-control" />
        <span asp-validation-for="Discipline.MonthlySessions" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Discipline.IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="Discipline.IsActive" class="form-check-label">Activo</label>
    </div>

    <button type="submit" class="btn btn-primary">Crear Disciplina</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}