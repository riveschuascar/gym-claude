@page
@model WebUI.Pages.Disciplines.CreateModel
@{
    ViewData["Title"] = "Registrar Nueva Disciplina";
}

<div class="text-center">
    <h1 class="display-4">Registrar Nueva Disciplina</h1>
    <p class="lead text-muted">Complete los datos para crear una nueva disciplina.</p>
</div>

@if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
{
<div class="alert alert-danger mt-3">@err</div>
}

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <partial name="_CreateDisciplineForm" model="Model" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}