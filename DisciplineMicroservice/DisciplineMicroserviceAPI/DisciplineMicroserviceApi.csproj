		<ProjectReference Include="..\DisciplineMicroserviceInfraestructure\DisciplineMicroserviceInfrastructure.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Update="appsettings.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
